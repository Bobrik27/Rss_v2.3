---
import { APPROACH } from '../data/portfolioData';
---

<div class="py-20 px-4">
  <div class="max-w-7xl mx-auto">
    <h2 class="text-4xl md:text-5xl font-bold text-center mb-16 text-white">
      Approach
    </h2>
    <div class="flex flex-col lg:flex-row gap-12 items-center">
      <div class="lg:w-1/2">
        <ul class="space-y-6">
          {APPROACH.map((principle) => (
            <li
              id={`principle-${principle.id}`}
              class="bg-[#1e293b]/50 backdrop-blur-md border border-white/10 rounded-2xl p-6 transition-all duration-300 hover:border-brand-accent hover:shadow-lg hover:shadow-brand-accent/20"
            >
              <h3 class="text-xl font-bold text-brand-accent mb-2">
                {principle.title}
              </h3>
              <p class="text-gray-300">
                {principle.description}
              </p>
            </li>
          ))}
        </ul>
      </div>
      <div class="lg:w-1/2 flex justify-center">
        <div class="bg-gradient-to-br from-brand-accent/20 to-purple-500/10 backdrop-blur-md border border-white/10 rounded-2xl p-8 w-full max-w-md h-96 flex items-center justify-center">
          <svg viewBox="0 0 200 200" class="w-64 h-64">
            <circle cx="100" cy="100" r="80" fill="none" stroke="currentColor" stroke-width="2" class="text-brand-accent/30" />
            <circle cx="100" cy="100" r="60" fill="none" stroke="currentColor" stroke-width="2" class="text-brand-accent/50" />
            <circle cx="100" cy="100" r="40" fill="none" stroke="currentColor" stroke-width="2" class="text-brand-accent/70" />
            <circle cx="100" cy="100" r="20" fill="currentColor" class="text-brand-accent/90" />
            
            <text x="100" y="70" text-anchor="middle" class="text-xs fill-white">Reliability</text>
            <text x="135" y="100" text-anchor="middle" class="text-xs fill-white">Architecture</text>
            <text x="100" y="130" text-anchor="middle" class="text-xs fill-white">Business Value</text>
            <text x="65" y="100" text-anchor="middle" class="text-xs fill-white">Product Thinking</text>
          </svg>
        </div>
      </div>
    </div>
  </div>
</div>