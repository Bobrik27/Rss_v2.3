---
import { content } from '../i18n/content';

interface Props {
  lang?: string;
}

const { lang = 'en' } = Astro.props;
const validLang = (['en', 'de', 'ru'] as const).includes(lang as any) ? lang as keyof typeof content : 'en';
const hero = content[validLang].hero;
---

<section class="relative min-h-screen flex items-center justify-center bg-background overflow-hidden">
  <div class="container mx-auto px-4 text-center">
    <div class="max-w-6xl mx-auto">
      <!-- Main title split into two lines -->
      <h1 class="font-black uppercase tracking-[-0.02em] leading-[0.85]">
        <span class="block text-6xl md:text-8xl lg:text-[10rem] hero-text-white">
          RUNSWIFT
        </span>
        <span class="block text-6xl md:text-8xl lg:text-[10rem] hero-text-cyan mt-2 md:mt-4">
          STUDIO
        </span>
      </h1>

      <!-- Subtitle -->
      <p class="mt-8 md:mt-12 text-lg md:text-2xl text-muted-foreground max-w-3xl mx-auto font-light">
        {hero.subtitle}
      </p>

      <!-- CTA buttons -->
      <div class="mt-10 md:mt-16 flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href="#contact"
          class="inline-flex items-center justify-center px-8 py-4 text-lg font-semibold rounded-lg bg-primary text-primary-foreground hover:bg-primary/90 transition-colors duration-300 shadow-lg shadow-primary/20"
        >
          {hero.cta}
        </a>
        <a
          href="#solutions"
          class="inline-flex items-center justify-center px-8 py-4 text-lg font-semibold rounded-lg border-2 border-border text-foreground hover:border-primary transition-colors duration-300"
        >
          {lang === 'ru' ? 'Наши решения' : lang === 'de' ? 'Unsere Lösungen' : 'Our Solutions'}
        </a>
      </div>
    </div>
  </div>

  <!-- Decorative elements (subtle) -->
  <div class="absolute inset-0 pointer-events-none overflow-hidden">
    <div class="absolute top-1/4 left-1/4 w-64 h-64 rounded-full bg-primary/5 blur-3xl"></div>
    <div class="absolute bottom-1/4 right-1/4 w-96 h-96 rounded-full bg-secondary/5 blur-3xl"></div>
  </div>
</section>

<style>
  .hero-text-white {
    color: white;
    text-shadow:
      0 0 30px rgba(255, 255, 255, 0.3),
      0 0 10px rgba(255, 255, 255, 0.5);
    -webkit-text-stroke: 1px rgba(255, 255, 255, 0.5);
  }

  .hero-text-cyan {
    color: #22d3ee;
    text-shadow:
      0 0 30px rgba(34, 211, 238, 0.6),
      0 0 10px rgba(34, 211, 238, 0.8);
    -webkit-text-stroke: 1px rgba(255, 255, 255, 0.5);
  }

</style>