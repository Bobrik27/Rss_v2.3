---
import { content } from '../../i18n/content';

interface Props {
  lang?: string;
}

const { lang = 'ru' } = Astro.props;
const validLang = (['en', 'de', 'ru'] as const).includes(lang as any) ? lang as keyof typeof content : 'ru';
const t = content[validLang];
const services = t.services;
const botUrl = 'https://t.me/RunSwiftStudioBot';
---

<section id="services" class="py-24 bg-background text-foreground overflow-hidden">
  <div class="container mx-auto px-6">
    
    <!-- –ó–∞–≥–æ–ª–æ–≤–æ–∫ —Å–µ–∫—Ü–∏–∏ -->
    <div class="text-center mb-20">
      <div class="inline-block px-4 py-1.5 mb-6 text-[10px] font-bold tracking-[0.2em] uppercase border border-border rounded-full bg-card text-muted-foreground">
        {services.badge}
      </div>
      <h2 class="text-4xl md:text-5xl font-bold mb-6 uppercase">
        {services.title}
      </h2>
      <p class="text-muted-foreground max-w-2xl mx-auto text-lg leading-relaxed">
        {services.subtitle}
      </p>
    </div>

    <!-- –ë–ª–æ–∫ –ö–æ–Ω—Å–∞–ª—Ç–∏–Ω–≥–∞ (–¢–æ—á–∫–∏ –≤—Ö–æ–¥–∞) -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-16">
      {services.consultServices.map((item, index) => {
        const colors = [
          { border: 'blue', text: 'blue-400', bg: 'blue-500/10' },
          { border: 'purple', text: 'purple-400', bg: 'purple-500/10' }
        ];
        const color = colors[index];
        return (
          <div class={`p-8 rounded-[2rem] border border-border bg-card/50 flex flex-col sm:flex-row items-start sm:items-center justify-between group transition-all duration-500 gap-6 ${index === 0 ? 'hover:border-blue-500/70 hover:shadow-[0_0_40px_-15px_rgba(59,130,246,0.6)]' : 'hover:border-purple-500/70 hover:shadow-[0_0_40px_-15px_rgba(168,85,247,0.6)]'}`}>
            <div class="flex items-center gap-6">
              <div class={`flex-shrink-0 w-16 h-16 flex items-center justify-center rounded-2xl bg-gradient-to-br from-card to-card/80 border border-border/50 transition-all duration-500 shadow-xl ${index === 0 ? 'text-blue-400 group-hover:border-blue-500/70 group-hover:bg-blue-500/10 group-hover:shadow-[0_0_40px_-15px_rgba(59,130,246,0.8)]' : 'text-purple-400 group-hover:border-purple-500/70 group-hover:bg-purple-500/10 group-hover:shadow-[0_0_40px_-15px_rgba(168,85,247,0.8)]'} group-hover:scale-110`}>
                {item.icon === 'üîç' ? (
                  <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="11" cy="11" r="8"/><path d="m21 21-4.3-4.3"/></svg>
                ) : (
                  <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M15 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7Z"/><path d="M14 2v4a2 2 0 0 0 2 2h4"/><path d="M9 15h6"/><path d="M9 11h6"/></svg>
                )}
              </div>
              <div>
                <h4 class="text-xl font-bold mb-1">{item.title}</h4>
                <p class="text-sm text-muted-foreground max-w-xs leading-relaxed">{item.description}</p>
              </div>
            </div>
            <div class="text-left sm:text-right">
              <div class="text-[10px] uppercase tracking-widest text-muted-foreground mb-1 font-mono">{services.fromLabel}</div>
              <div class="font-bold text-xl text-foreground whitespace-nowrap">{item.price} ‚ÇΩ</div>
            </div>
          </div>
        );
      })}
    </div>

    <!-- –û—Å–Ω–æ–≤–Ω—ã–µ –¢–∞—Ä–∏—Ñ—ã -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 mb-20">
      {services.tiers.map((tier, index) => {
        const colorMap = {
          amber: { border: 'amber', text: 'amber-400', bg: 'amber-500/10', shadow: 'rgba(245,158,11,0.3)' },
          blue: { border: 'blue', text: 'blue-400', bg: 'blue-500/10', shadow: 'rgba(59,130,246,0.4)' },
          purple: { border: 'purple', text: 'purple-400', bg: 'purple-500/10', shadow: 'rgba(168,85,247,0.3)' }
        };
        const colorKey = tier.color as 'amber' | 'blue' | 'purple';
        const color = colorMap[colorKey] || colorMap.blue;
        const isPopular = tier.popular;
        return (
          <div
            class={`relative group p-10 rounded-[2.5rem] border transition-all duration-500 hover:-translate-y-2 ${
              isPopular
                ? `lg:scale-105 z-10 ${
                    tier.color === 'amber'
                      ? 'border-amber-500/40 bg-amber-500/[0.06] shadow-[0_0_40px_-20px_rgba(245,158,11,0.3)] hover:border-amber-500/80 hover:shadow-[0_0_80px_-25px_rgba(245,158,11,0.3)]'
                      : tier.color === 'blue'
                      ? 'border-blue-500/40 bg-blue-500/[0.06] shadow-[0_0_40px_-20px_rgba(59,130,246,0.4)] hover:border-blue-500/80 hover:shadow-[0_0_80px_-25px_rgba(59,130,246,0.4)]'
                      : 'border-purple-500/40 bg-purple-500/[0.06] shadow-[0_0_40px_-20px_rgba(168,85,247,0.3)] hover:border-purple-500/80 hover:shadow-[0_0_80px_-25px_rgba(168,85,247,0.3)]'
                  }`
                : `border-border bg-card/50 ${
                    tier.color === 'amber'
                      ? 'hover:border-amber-500/80 hover:shadow-[0_0_80px_-25px_rgba(245,158,11,0.3)]'
                      : tier.color === 'blue'
                      ? 'hover:border-blue-500/80 hover:shadow-[0_0_80px_-25px_rgba(59,130,246,0.4)]'
                      : 'hover:border-purple-500/80 hover:shadow-[0_0_80px_-25px_rgba(168,85,247,0.3)]'
                  }`
            }`}
          >
            {isPopular && (
              <div class={`absolute -top-4 left-1/2 -translate-x-1/2 px-5 py-1.5 text-[10px] font-black rounded-full tracking-[0.15em] uppercase ${
                tier.color === 'amber'
                  ? 'bg-amber-600 shadow-[0_0_15px_rgba(245,158,11,0.5)]'
                  : tier.color === 'blue'
                  ? 'bg-blue-600 shadow-[0_0_15px_rgba(59,130,246,0.5)]'
                  : 'bg-purple-600 shadow-[0_0_15px_rgba(168,85,247,0.5)]'
              }`}>
                –ü–æ–ø—É–ª—è—Ä–Ω—ã–π –≤—ã–±–æ—Ä
              </div>
            )}
            
            <div class={`mb-8 w-20 h-20 flex items-center justify-center rounded-3xl bg-gradient-to-br from-card to-card/80 border border-border/50 transition-all duration-500 shadow-xl group-hover:shadow-[0_0_40px_-15px_${
              tier.color === 'amber' ? 'rgba(245,158,11,0.3)' : tier.color === 'blue' ? 'rgba(59,130,246,0.4)' : 'rgba(168,85,247,0.3)'
            }] ${
              isPopular
                ? tier.color === 'amber'
                  ? 'bg-amber-500/10 border-amber-500/30'
                  : tier.color === 'blue'
                  ? 'bg-blue-500/10 border-blue-500/30'
                  : 'bg-purple-500/10 border-purple-500/30'
                : ''
            } ${
              tier.color === 'amber'
                ? 'text-amber-400'
                : tier.color === 'blue'
                ? 'text-blue-400'
                : 'text-purple-400'
            }`}>
              {tier.icon === '‚ö°' ? (
                <svg xmlns="http://www.w3.org/2000/svg" width="36" height="36" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m13 2-2 10h9l-11 10 2-10H3Z"/></svg>
              ) : tier.icon === 'üîÑ' ? (
                <svg xmlns="http://www.w3.org/2000/svg" width="36" height="36" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M2 20a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V8l-7-5L2 8Z"/><path d="M7 11v8"/><path d="M12 11v8"/><path d="M17 11v8"/></svg>
              ) : (
                <svg xmlns="http://www.w3.org/2000/svg" width="36" height="36" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m2 4 3 12h14l3-12-6 7-4-7-4 7-6-7Z"/><path d="M19 16v4a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2v-4"/></svg>
              )}
            </div>
            
            <h3 class="text-3xl font-bold mb-1 text-foreground">{tier.name}</h3>
            <p class="text-xs font-mono text-muted-foreground uppercase tracking-widest mb-6 italic">{tier.subtitle}</p>
            <p class="text-base text-muted-foreground leading-relaxed mb-8 min-h-[3rem]">{tier.description}</p>
            
            <div class="mb-8 pb-8 border-b border-border">
              <div class="text-4xl font-bold tracking-tight text-foreground flex items-baseline gap-1">
                <span class="text-lg font-normal text-muted-foreground mr-1 italic">{services.fromLabel}</span> {tier.price} <span class="text-lg text-muted-foreground font-medium">‚ÇΩ</span>
              </div>
              <div class="flex items-center gap-2 mt-4 text-[11px] text-muted-foreground font-bold tracking-widest uppercase">
                <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><polyline points="12 6 12 12 16 14"/></svg>
                {tier.duration.toUpperCase()}
              </div>
            </div>

            <ul class="space-y-4 mb-10 text-[15px] text-muted-foreground">
              {tier.features.map((feature, idx) => (
                <li class="flex items-center gap-3">
                  {tier.color === 'amber' ? (
                    <span class="text-amber-500/40 font-bold">‚Üí</span>
                  ) : tier.color === 'blue' ? (
                    <span class="text-blue-500 font-bold italic">‚úì</span>
                  ) : (
                    <span class="text-purple-500 font-bold tracking-tighter">‚óè</span>
                  )}
                  <span>{feature}</span>
                </li>
              ))}
            </ul>

            <a
              href={botUrl}
              target="_blank"
              class={`w-full py-5 rounded-2xl font-black text-sm tracking-[0.2em] uppercase text-center block transition-all duration-500 ${
                isPopular
                  ? `text-white ${
                      tier.color === 'amber'
                        ? 'bg-gradient-to-r from-amber-600 to-amber-700 hover:from-amber-500 hover:to-amber-600 shadow-[0_15px_35px_-10px_rgba(245,158,11,0.3)] hover:shadow-[0_20px_40px_-10px_rgba(245,158,11,0.3)]'
                        : tier.color === 'blue'
                        ? 'bg-gradient-to-r from-blue-600 to-blue-700 hover:from-blue-500 hover:to-blue-600 shadow-[0_15px_35px_-10px_rgba(59,130,246,0.4)] hover:shadow-[0_20px_40px_-10px_rgba(59,130,246,0.4)]'
                        : 'bg-gradient-to-r from-purple-600 to-purple-700 hover:from-purple-500 hover:to-purple-600 shadow-[0_15px_35px_-10px_rgba(168,85,247,0.3)] hover:shadow-[0_20px_40px_-10px_rgba(168,85,247,0.3)]'
                    }`
                  : 'bg-card hover:bg-card/90 text-foreground border-2 border-border hover:border-primary/50'
              }`}
            >
              {t.buttons.discussProject}
            </a>
          </div>
        );
      })}
    </div>

    <!-- –§—É—Ç–µ—Ä –±–ª–æ–∫–∞: –ë–µ–∑–æ–ø–∞—Å–Ω–æ—Å—Ç—å -->
    <div class="p-10 md:p-14 rounded-[3rem] border border-border bg-gradient-to-br from-card/80 to-card/30 relative overflow-hidden group">
        <!-- –î–µ–∫–æ—Ä–∞—Ç–∏–≤–Ω—ã–π —ç—Ñ—Ñ–µ–∫—Ç -->
        <div class="absolute -right-40 -bottom-40 w-80 h-80 bg-emerald-500/10 blur-[120px] rounded-full group-hover:bg-emerald-500/20 transition-all duration-1000"></div>
        <div class="absolute -left-20 -top-20 w-60 h-60 bg-blue-500/5 blur-[100px] rounded-full group-hover:bg-blue-500/10 transition-all duration-1000"></div>
        
        <div class="flex flex-col lg:flex-row items-center justify-between gap-12 relative z-10">
          <div class="flex flex-col md:flex-row items-center gap-10 text-center md:text-left">
            <div class="flex-shrink-0 p-6 rounded-3xl bg-gradient-to-br from-emerald-500/20 to-emerald-600/10 border border-emerald-500/30 text-emerald-500 shadow-[0_0_40px_rgba(16,185,129,0.2)] group-hover:shadow-[0_0_60px_rgba(16,185,129,0.3)] transition-all duration-700">
              <svg xmlns="http://www.w3.org/2000/svg" width="42" height="42" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M20 13c0 5-3.5 7.5-7.66 8.95a1 1 0 0 1-.67-.01C7.5 20.5 4 18 4 13V6a1 1 0 0 1 1-1c2 0 4.5-1.2 6.24-2.72a1.17 1.17 0 0 1 1.52 0C14.5 3.8 17 5 19 5a1 1 0 0 1 1 1z"/></svg>
            </div>
            <div class="max-w-2xl">
              <h4 class="text-3xl font-bold mb-4 tracking-tight">{services.security.title}</h4>
              <p class="text-[16px] text-muted-foreground leading-relaxed italic">
                {services.security.description}
              </p>
            </div>
          </div>
          
          <div class="flex flex-wrap justify-center gap-10 md:gap-16 opacity-40 grayscale hover:grayscale-0 hover:opacity-100 transition-all duration-700">
             <div class="flex flex-col items-center gap-3">
                <span class="text-[13px] font-black tracking-[0.25em] font-mono text-emerald-400">N8N.IO</span>
                <div class="h-[2px] w-12 bg-emerald-500/30 group-hover:bg-emerald-500/70 transition-all"></div>
             </div>
             <div class="flex flex-col items-center gap-3">
                <span class="text-[13px] font-black tracking-[0.25em] font-mono text-blue-400">REACT</span>
                <div class="h-[2px] w-12 bg-blue-500/30 group-hover:bg-blue-500/70 transition-all"></div>
             </div>
             <div class="flex flex-col items-center gap-3">
                <span class="text-[13px] font-black tracking-[0.25em] font-mono text-purple-400">LLM</span>
                <div class="h-[2px] w-12 bg-purple-500/30 group-hover:bg-purple-500/70 transition-all"></div>
             </div>
             <div class="flex flex-col items-center gap-3">
                <span class="text-[13px] font-black tracking-[0.25em] font-mono text-amber-400">POSTGRES</span>
                <div class="h-[2px] w-12 bg-amber-500/30 group-hover:bg-amber-500/70 transition-all"></div>
             </div>
             <div class="flex flex-col items-center gap-3">
                <span class="text-[13px] font-black tracking-[0.25em] font-mono text-cyan-400">DOCKER</span>
                <div class="h-[2px] w-12 bg-cyan-500/30 group-hover:bg-cyan-500/70 transition-all"></div>
             </div>
          </div>
        </div>
    </div>
  </div>
</section>
