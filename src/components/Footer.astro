---
import { ui } from '../i18n/ui.ts';

interface Props {
  lang: string;
}

const { lang } = Astro.props;
const dictionary = ui[lang as keyof typeof ui] || ui.ru;
---

<footer class="mt-auto border-t border-border bg-card">
  <div class="container mx-auto px-4 py-8">
    <div class="flex flex-col md:flex-row justify-between items-center gap-6">
      <div class="text-center md:text-left">
        <p class="text-text-muted text-sm">
          {dictionary.footer.copyright}
        </p>
        <p class="text-text-muted text-sm mt-2">
          {dictionary.footer.madeWith}
        </p>
      </div>

      <div class="flex items-center gap-6">
        <a href={`/${lang}/privacy`} class="text-text-muted hover:text-text text-sm">
          Privacy Policy
        </a>
        <a href={`/${lang}/terms`} class="text-text-muted hover:text-text text-sm">
          Terms of Service
        </a>
        <a href="https://github.com/runswift" class="text-text-muted hover:text-text text-sm">
          GitHub
        </a>
      </div>
    </div>
  </div>
</footer>