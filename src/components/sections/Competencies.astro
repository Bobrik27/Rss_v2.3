---
interface Props {
  data: Array<{
    title: string;
    icon: any;
    items: string[];
  }>;
  title: string;
  sub: string;
}
const { data, title, sub } = Astro.props;
---

<section class="relative py-20">
  <div class="container mx-auto px-4">
    <!-- Section header -->
    <div class="text-center max-w-3xl mx-auto mb-20">
      <h2 class="text-5xl md:text-6xl font-black tracking-tight text-white mb-6">
        {title}
      </h2>
      <p class="text-xl md:text-2xl text-text-muted leading-relaxed">
        {sub}
      </p>
    </div>

    <!-- Cards grid -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
      {data.map((item, idx) => {
        const Icon = item.icon;
        return (
          <div
            class="group bg-card border border-white/5 rounded-2xl p-8 hover:border-primary/50 transition-all duration-300 hover:shadow-[0_0_30px_rgba(34,211,238,0.25)] hover:-translate-y-2"
          >
            <div class="flex items-start gap-6">
              <div class="p-4 rounded-2xl bg-primary/10 text-primary group-hover:bg-primary/20 transition-colors">
                <Icon class="w-8 h-8" />
              </div>
              <div class="flex-1">
                <h3 class="text-2xl font-bold text-white mb-4">
                  {item.title}
                </h3>
                <ul class="space-y-3">
                  {item.items.map((text, i) => (
                    <li class="flex items-start gap-3">
                      <span class="text-primary mt-1.5">â€¢</span>
                      <span class="text-text-muted text-base leading-relaxed">
                        {text}
                      </span>
                    </li>
                  ))}
                </ul>
              </div>
            </div>
          </div>
        );
      })}
    </div>
  </div>
</section>