---
interface Props {
  data: Array<{
    title: string;
    icon: any;
    items: string[];
  }>;
  title: string;
  sub: string;
}
const { data, title, sub } = Astro.props;
---

<section id="competencies" class="py-24 relative overflow-hidden">
  <div class="container mx-auto px-6">
    <div class="max-w-3xl mx-auto text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold mb-6">{title}</h2>
      <p class="text-xl text-muted-foreground">{sub}</p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      {data.map((item) => {
        const Icon = item.icon;
        return (
          <div class="group bg-card border border-border p-8 rounded-2xl hover:border-primary/50 hover:bg-card transition-all duration-300 hover:shadow-lg hover:shadow-primary/10">
            <!-- Header Row: Icon + Title -->
            <div class="flex items-center gap-4 mb-6">
              <div class="w-14 h-14 rounded-xl bg-primary/10 flex items-center justify-center text-primary group-hover:scale-110 transition-transform duration-300">
                <Icon className="w-7 h-7" />
              </div>
              <h3 class="text-xl font-bold text-white group-hover:text-primary transition-colors">{item.title}</h3>
            </div>
            <!-- List Items -->
            <ul class="space-y-2">
              {item.items.map(subItem => (
                <li class="flex items-start text-sm text-muted-foreground">
                  <span class="mr-2 text-primary/70">â€¢</span>
                  {subItem}
                </li>
              ))}
            </ul>
          </div>
        );
      })}
    </div>
  </div>
</section>