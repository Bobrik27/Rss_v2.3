---
import type { getLandingData } from '../../data/landing';

interface Props {
  data: ReturnType<typeof getLandingData>['about'];
}
const { data } = Astro.props;
---

<section class="relative py-20 overflow-hidden">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
      <!-- Left column: text -->
      <div>
        <h2 class="text-5xl md:text-6xl font-black tracking-tight text-white mb-6">
          {data.title}
        </h2>
        <p class="text-xl md:text-2xl text-text-muted mb-8 leading-relaxed">
          {data.subtitle}
        </p>
        <div class="space-y-6">
          {data.paragraphs.map((paragraph, idx) => (
            <p class="text-lg text-text-muted/90 leading-relaxed">
              {paragraph}
            </p>
          ))}
        </div>
      </div>

      <!-- Right column: stats grid -->
      <div class="relative">
        <div class="grid grid-cols-2 gap-6">
          {data.stats.map((stat, idx) => {
            const Icon = stat.icon;
            return (
              <div
                class="bg-card border border-white/5 rounded-2xl p-8 text-center hover:border-primary/30 transition-colors duration-300 hover:shadow-[0_0_20px_rgba(34,211,238,0.1)]"
              >
                <div class="inline-flex items-center justify-center w-16 h-16 rounded-2xl bg-primary/10 text-primary mb-4">
                  <Icon className="w-8 h-8" />
                </div>
                <div class="text-5xl font-black text-white mb-2">
                  {stat.value}
                </div>
                <div class="text-lg text-text-muted">
                  {stat.label}
                </div>
              </div>
            );
          })}
        </div>
        <!-- Decorative background element -->
        <div class="absolute -top-10 -right-10 w-64 h-64 bg-primary/5 rounded-full blur-3xl -z-10"></div>
      </div>
    </div>
  </div>
</section>