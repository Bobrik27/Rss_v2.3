---
import type { getLandingData } from '../../data/landing';

interface Props {
  data: ReturnType<typeof getLandingData>['approach'];
  title: string;
  sub: string;
}
const { data, title, sub } = Astro.props;
---

<section class="relative py-20">
  <div class="container mx-auto px-4">
    <!-- Section header -->
    <div class="text-center max-w-3xl mx-auto mb-20">
      <h2 class="text-5xl md:text-6xl font-black tracking-tight text-white mb-6">
        {title}
      </h2>
      <p class="text-xl md:text-2xl text-text-muted leading-relaxed">
        {sub}
      </p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
      <!-- Left: principles grid -->
      <div class="space-y-8">
        {data.map((principle, idx) => {
          const Icon = principle.icon;
          return (
            <div
              class="group bg-card border border-border rounded-2xl p-8 hover:border-primary/30 transition-all duration-300 hover:shadow-lg hover:shadow-primary/10"
            >
              <div class="flex items-start gap-6">
                <div class="p-4 rounded-2xl bg-primary/10 text-primary group-hover:bg-primary/20 transition-colors">
                  <Icon className="w-8 h-8" />
                </div>
                <div class="flex-1">
                  <h3 class="text-2xl font-bold text-white mb-3">
                    {principle.title}
                  </h3>
                  <p class="text-text-muted text-lg leading-relaxed">
                    {principle.description}
                  </p>
                </div>
              </div>
            </div>
          );
        })}
      </div>

      <!-- Right: abstract visualization -->
      <div class="relative">
        <div class="relative w-full h-96 rounded-3xl overflow-hidden border border-white/10 bg-gradient-to-br from-card to-card/50">
          <!-- Decorative circles -->
          <div class="absolute top-1/4 left-1/4 w-32 h-32 rounded-full bg-primary/10 blur-xl"></div>
          <div class="absolute bottom-1/4 right-1/4 w-40 h-40 rounded-full bg-secondary/10 blur-xl"></div>
          <!-- Connecting lines (simplified flowchart) -->
          <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-48 h-48 border-2 border-white/20 rounded-full"></div>
          <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-32 h-32 border-2 border-primary/30 rounded-full"></div>
          <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-16 h-16 border-2 border-secondary/40 rounded-full"></div>
          <!-- Dots -->
          <div class="absolute top-1/4 left-1/2 w-4 h-4 rounded-full bg-primary"></div>
          <div class="absolute bottom-1/3 right-1/3 w-4 h-4 rounded-full bg-secondary"></div>
          <div class="absolute top-2/3 left-1/3 w-4 h-4 rounded-full bg-primary"></div>
          <!-- Text label -->
          <div class="absolute bottom-8 left-1/2 -translate-x-1/2 text-center">
            <div class="text-white text-xl font-bold">Process Flow</div>
            <div class="text-text-muted text-sm">Iterative & Reliable</div>
          </div>
        </div>
        <div class="absolute -bottom-10 -right-10 w-80 h-80 bg-primary/5 rounded-full blur-3xl -z-10"></div>
      </div>
    </div>
  </div>
</section>