---
import type { getLandingData } from '../../data/landing';

interface Props {
  data: ReturnType<typeof getLandingData>['approach'];
  title: string;
  sub: string;
}
const { data, title, sub } = Astro.props;
---

<section class="relative py-24">
  <div class="container mx-auto px-6">
    <!-- Section header -->
    <div class="text-center max-w-3xl mx-auto mb-16">
      <h2 class="text-4xl md:text-5xl font-bold mb-6 uppercase">
        {title}
      </h2>
      <p class="text-xl text-muted-foreground">
        {sub}
      </p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-stretch">
      <!-- Left: principles grid -->
      <div class="space-y-8">
        {data.map((principle, idx) => {
          const Icon = principle.icon;
          return (
            <div
              class="group bg-card border border-border rounded-2xl p-8 hover:border-primary/30 transition-all duration-300 hover:shadow-lg hover:shadow-primary/10"
            >
              <div class="flex items-start gap-6">
                <div class="w-12 h-12 rounded-xl bg-primary/10 flex items-center justify-center text-primary shrink-0 mt-1">
                  <Icon className="w-6 h-6" />
                </div>
                <div class="flex-1">
                  <h3 class="text-xl font-bold text-white mb-3">
                    {principle.title}
                  </h3>
                  <p class="text-muted-foreground leading-relaxed">
                    {principle.description}
                  </p>
                </div>
              </div>
            </div>
          );
        })}
      </div>

      <!-- Right: custom image -->
      <div class="relative h-full self-stretch max-h-[728px]">
        <div class="relative w-full h-full rounded-3xl overflow-hidden border border-border bg-card/20 flex items-center justify-center">
          <!-- Placeholder for your image -->
          <img
            src="/images/approach-visual.png"
            alt="Process Flow"
            class="w-full h-full object-contein"
          />
          <!-- Optional overlay text -->
          <div class="absolute bottom-8 left-1/2 -translate-x-1/2 text-center">
            <div class="text-white text-xl font-bold">Process Flow</div>
            <div class="text-muted-foreground text-sm">Iterative & Reliable</div>
          </div>
        </div>
        <div class="absolute -bottom-10 -right-10 w-80 h-80 bg-primary/5 rounded-full blur-3xl -z-10"></div>
      </div>
    </div>
  </div>
</section>