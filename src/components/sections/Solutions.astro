---
interface Props {
  data: Array<{
    title: string;
    icon: any;
    description: string;
  }>;
  title: string;
  sub: string;
}
const { data, title, sub } = Astro.props;
---

<section class="py-24 bg-black/20">
  <div class="container mx-auto px-6">
    <div class="max-w-3xl mx-auto text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold mb-6">{title}</h2>
      <p class="text-xl text-muted-foreground">{sub}</p>
    </div>

    <div class="grid md:grid-cols-2 gap-8">
      {data.map((item) => {
        const Icon = item.icon;
        return (
          <div class="group bg-[#1e293b]/40 backdrop-blur-sm border border-white/5 p-8 rounded-2xl hover:border-primary/50 transition-all duration-300 flex items-start gap-6">
            <div class="w-12 h-12 shrink-0 rounded-lg bg-primary/10 flex items-center justify-center text-primary mt-1">
              <Icon className="w-6 h-6" />
            </div>
            <div>
              <h3 class="text-2xl font-bold mb-3 text-white">{item.title}</h3>
              <p class="text-muted-foreground leading-relaxed">{item.description}</p>
            </div>
          </div>
        );
      })}
    </div>
  </div>
</section>