---
interface Props {
  data: Array<{
    title: string;
    icon: any;
    description: string;
  }>;
  title: string;
  sub: string;
}
const { data, title, sub } = Astro.props;
---

<section class="relative">
  <div class="container mx-auto px-4">
    <!-- Section header -->
    <div class="text-center max-w-3xl mx-auto mb-16">
      <h2 class="text-4xl md:text-5xl font-black tracking-tight text-white mb-4">
        {title}
      </h2>
      <p class="text-lg md:text-xl text-text-muted">
        {sub}
      </p>
    </div>

    <!-- Cards grid -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
      {data.map((item, idx) => {
        const Icon = item.icon;
        return (
          <div
            class="group bg-card border border-white/5 rounded-2xl p-8 hover:border-primary/50 transition-all duration-300 hover:shadow-2xl hover:shadow-primary/10"
          >
            <div class="flex items-start gap-6">
              <div class="p-4 rounded-2xl bg-primary/10 text-primary group-hover:bg-primary/20 transition-colors">
                <Icon class="w-8 h-8" />
              </div>
              <div class="flex-1">
                <h3 class="text-2xl font-bold text-white mb-3">
                  {item.title}
                </h3>
                <p class="text-text-muted text-base leading-relaxed">
                  {item.description}
                </p>
              </div>
            </div>
          </div>
        );
      })}
    </div>
  </div>
</section>