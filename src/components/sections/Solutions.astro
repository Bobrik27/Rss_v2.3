---
interface Props {
  data: Array<{
    title: string;
    icon: any;
    description: string;
  }>;
  title: string;
  sub: string;
}
const { data, title, sub } = Astro.props;
---

<section class="relative py-20">
  <div class="container mx-auto px-4">
    <!-- Section header -->
    <div class="text-center max-w-3xl mx-auto mb-20">
      <h2 class="text-5xl md:text-6xl font-black tracking-tight text-white mb-6">
        {title}
      </h2>
      <p class="text-xl md:text-2xl text-text-muted leading-relaxed">
        {sub}
      </p>
    </div>

    <!-- Cards grid -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-10">
      {data.map((item, idx) => {
        const Icon = item.icon;
        return (
          <div
            class="group bg-card border border-white/5 rounded-2xl p-10 hover:border-primary/50 transition-all duration-300 hover:shadow-[0_0_30px_rgba(34,211,238,0.25)] hover:-translate-y-2"
          >
            <div class="flex items-start gap-8">
              <div class="p-5 rounded-2xl bg-primary/10 text-primary group-hover:bg-primary/20 transition-colors">
                <Icon class="w-10 h-10" />
              </div>
              <div class="flex-1">
                <h3 class="text-3xl font-bold text-white mb-4">
                  {item.title}
                </h3>
                <p class="text-text-muted text-lg leading-relaxed">
                  {item.description}
                </p>
              </div>
            </div>
          </div>
        );
      })}
    </div>
  </div>
</section>