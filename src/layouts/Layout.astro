---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

export interface Props {
  title?: string;
  lang?: string;
}

const { title = 'Run Swift Studio v3', lang = 'ru' } = Astro.props;
---

<!doctype html>
<html lang={lang} class="dark" data-theme="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
  </head>
  <body class="bg-background text-text min-h-screen font-sans antialiased">
    <Header lang={lang} />
    <main class="max-w-[1700px] mx-auto w-full px-4">
      <slot />
    </main>
    <Footer lang={lang} />
  </body>
</html>